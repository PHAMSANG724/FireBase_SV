<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idRLBSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22714A">

    <TextView
        android:id="@+id/idTVsvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Ten sinh vien"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTVsvGioiTinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVsvName"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Gioi Tinh"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTVsvDienThoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVsvGioiTinh"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Dien thoai"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTVEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVsvDienThoai"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Email"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/idBtnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVEmail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_btn_back"
        android:text="Edit SinhVien"
        android:textAllCaps="false" />

</RelativeLayout>